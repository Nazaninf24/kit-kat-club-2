<h1 class="text-center mb-5">Items#index</h1>
<hr>

<div class="container">
  <div class="row">
  <% @items.each do |item| %>
  <div class="col-md-4  d-flex justify-content-around">
    <div class="card mb-5" style="width:15rem;">
      <h3 class="card-header"><%= item.title =%></h3>
      <img style="height: 180px; width: 100%; display: block;" src="<%= item.image_url =%>" alt="Card image">
      <div class="card-body">
        <p class="card-text"><%= truncate(item.description, :length => 50)  =%></p>
        <hr>
        <h4 class="card-text font-weight-bold"><%= item.price =%>â‚¬</h4>
      </div>
      <div class="card-footer text-muted text-center" >
        <a href="#" class="btn btn-primary">Add to cart</a>
      </div>
    </div>
  </div>
  <% end %>
  </div>
</div>