<div class='container' style="margin-top: 5rem;">
      <div class="card mb-5" style="width:80%; margin: auto;">
        <h3 class="card-header"><%= @item.title =%></h3>
        <img style="height: auto; width: 100%; display: block;" src="<%= @item.image_url =%>" alt="Card image">
        <div class="card-body">
          <p class="card-text"><%= @item.description.tr('[\"\"]','') =%></p>
          <hr>
          <h4 class="card-text font-weight-bold"><%= @item.price =%>â‚¬</h4>
        </div>
        <div class="card-footer text-muted text-center" >
          <%= link_to 'Ajouter au panier', cart_join_table_items_carts_path(params[:id]), method: :create, class: "btn btn-primary" %>
          <%= hidden_field(:id, :token) %>
        </div>
      </div>  
</div>